 <div>
    <h4 class="text-decoration-underline text-primary">Orden: </h4> {{order.orderNumber}}
 </div> 
 <div> 
    <h4 class="text-decoration-underline text-primary">Estado: </h4> {{order.status}}
 </div>
 <div> 
    <h4 class="text-decoration-underline text-primary">A las: </h4> {{order.timestamp}}
 </div>
 <div>
    <h4 class="text-decoration-underline text-primary" >e-mail: </h4>{{order.username}}
 </div> 
 <div> 
    <h4 class="text-decoration-underline text-primary"> Dirección: </h4>{{order.address}} 
 </div>

 <table class="table table-bordered border-dark" style="margin:3rem 0;">
  
        <thead class="thead-dark" style="background-color:aliceblue ;">
            
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            {{#each order.productos}}

                <tr scope="row">
                    <td>
                        {{title}} 
                    </td>
                    <td>
                        {{description}}
                    </td>
                    <td>
                        {{price}}
                    </td>
                    <td>
                        {{cantidad}}   
                    </td>
                    
                </tr>  
            
            {{/each}}
        </tbody>
    </table>